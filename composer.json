{
    "name": "clarkwinkelmann/flarum-ext-who-read",
    "description": "Make read status visible to selected groups",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-who-read",
        "forum": "https://discuss.flarum.org/d/23066"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\WhoRead\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Who read",
            "category": "feature",
            "icon": {
                "name": "fas fa-book-reader",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/23066"
        }
    }
}
